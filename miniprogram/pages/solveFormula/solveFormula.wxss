/* miniprogram/pages/solveFormula/solveFormula.wxss */
page{
  background-color: white;
}
.picker {
  background-color: white;
  height: 10vh;
  width: 200rpx;
}

.pickerContent {
  font-size: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.picker-section,
.showFormula {
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.formula-box {
  width: 100%;
  height: 10vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.showFormula {
  width: 100%;
  height: 10vh;
  font-size: 50rpx;
  border-top: 1px solid gainsboro;
}

.para-box {
  background-color: white;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 3vh;
  border-bottom: 1px solid gainsboro;
}

.paraInput-box,
.result-box {
  height: 5vh;
  width: 100%;
  font-size: 40rpx;

  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.borderTop {
  border-top: 1px solid gainsboro;
}

.paraText {
  width: 20vw;
}

.paraInput {

  height: 4vh;
  width: 60vw;
}

.result-box {

  height: 15vh;
  margin-top: 3vh;
  border-bottom: 1px solid gainsboro;
  border-top: 1px solid gainsboro;

}

.result-box text {

  line-height: 1.2;
  font-size: 50rpx;
  width: 100%;
  word-wrap: break-word;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 10rpx;
}

.paraDelete {
  margin-left: 2vw;
  height: 30rpx;
  width: 30rpx;
  opacity: 1;
}

.process-box {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.title {
  font-size: 50rpx;
  margin-top: 1vh;
}

.content {
  word-wrap: break-word;
  width: 90vw;
  font-size: 35rpx;
  margin-top: 1vh;
}