<!--miniprogram/pages/beijinghua/beijinghua.wxml-->
<view class="page">
	<view class="weui-form">
		<view class="weui-form__text-area ">
			<view class="weui-form__title">北京话生成</view>
		</view>
		<view class="weui-form__control-area ">
			<view class="weui-cells__group weui-cells__group_form ">
				<view class="weui-cells__title">请输入转换内容</view>
				<view class="weui-cells weui-cells_form">
					<view class="weui-cell">
						
						<view class="weui-cell__bd">
							<input class="weui-input" value="{{input}}" placeholder="点击完成即可转换" bindconfirm="confirm"/>
						</view>
					</view>
				</view>
			</view>
      <view class="content">
      {{content}}
      </view>
		</view>

		<view class="weui-form__opr-area ">
			<button type="primary" bindtap="clear">清除</button>
		</view>

		<view class="weui-form__extra-area ">
			<view class="weui-footer">
				<view class="weui-footer__text">Copyright © 2019-2020 仅供娱乐</view>
			</view>
		</view>
	</view>
</view>