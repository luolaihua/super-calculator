.btnbox{
  display: flex;
  height: 150rpx;
  bottom: 0rpx;
  width: 100%;
  border: none;
}
.btngroup{
  position: fixed;
  bottom: 0;
  width: 100%;
}
button{
  background-color: black;
  color: aliceblue;
  border-radius: 0%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
}
button::after{
  border-radius: 0;
  border: solid;
}
.brown{
  background-color: brown;
}
.c{
  color: brown;
}

.screen{
  word-wrap: break-word;
  width: 100%;
  position: fixed;
  bottom: 900rpx;
  
}
.screen view{
  text-align: right;
  margin: 20rpx;
}