@import "../../style/guide.wxss";

.guide .counter {
  margin-top: 50rpx;
  display: flex;
  flex-direction: row;
  align-content: space-between;
}

.btnbox{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  border: none;
  
}
.test{
  position: fixed;
  bottom: 0;
}
.btngroup{
  background-color: black;

  width: 100vw;
}
button{
  background-color: black;
  color: aliceblue;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0;
}
button::after{
  border-radius: 0;
  border: none;
}
.brown{
  border-radius: 0;
  background-color: brown;
}
.c{
  color: brown;
}

.screen1{

  width: 100%;
  height: 18vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
 
}
.res{
  line-height: 1;
  word-wrap: break-word;
  text-align: right;
  margin-left: 45rpx;
  margin-right: 20rpx;
}

.about{
  height: 50rpx;
  width: 50rpx;
  position: fixed;
  z-index: 2;
  top: 0;
  left: 0;
  opacity: 0.5;
}
.sound{
  height: 50rpx;
  width: 50rpx;
  position: fixed;
  z-index: 2;
  top: 50rpx;
  left: 0;
  opacity: 0.5;
}

  
.isRuleShow {
  display: block;
}
 
.isRuleHide {
  display: none;
}
 
.float1 {
  height: 100%;
  width: 100%;
  position: fixed;
  background-color: rgb(0, 0, 0,0.5);
  z-index: 2;
  top: 0;
  left: 0;
}

 
.floatContent {
  z-index: 3;
  padding: 10rpx 0;
  width: 80%;
  height: 80vh;
  background: #fff;
  margin:10% auto;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  left: 10vw;
}
text{
  margin-left: 20rpx;
}