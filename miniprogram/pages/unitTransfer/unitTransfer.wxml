<!--miniprogram/pages/unitTransfer/unitTransfer.wxml-->
<view class="body">
	<swiper indicator-dots="true">
		<swiper-item>
			<view class="viewGroup">
				<view class="viewBox">
					<view class="v1" id="{{id_length}}" bindtap="clickBtn" hover-class="shadow">长度</view>
					<view class="v1" id="{{id_energy}}" bindtap="clickBtn" hover-class="shadow">能量</view>
					<view class="v1" id="{{id_time}}" bindtap="clickBtn" hover-class="shadow">时间</view>
					<view class="v1" id="{{id_volume}}" bindtap="clickBtn" hover-class="shadow">体积</view>
				</view>
				<view class="viewBox">
					<view class="v1" id="{{id_liquidVolume}}" bindtap="clickBtn" hover-class="shadow">液体体积</view>
					<view class="v1" id="{{id_area}}" bindtap="clickBtn" hover-class="shadow">面积</view>
					<view class="v1" id="{{id_mass}}" bindtap="clickBtn" hover-class="shadow">质量</view>
					<view class="v1" id="{{id_temperature}}" bindtap="clickBtn" hover-class="shadow">温度</view>
				</view>
				<view class="viewBox">
					<view class="v1" id="{{id_velocity}}" bindtap="clickBtn" hover-class="shadow">速度</view>
					<view class="v1" id="{{id_jinzhi}}" bindtap="clickBtn" hover-class="shadow">进制</view>
					<view class="v1" id="{{id_EM}}" bindtap="clickBtn" hover-class="shadow">电学单位</view>
					<view class="v1" id="{{id_presure}}" bindtap="clickBtn" hover-class="shadow">压强</view>
				</view>
			</view>
		</swiper-item>
	</swiper>
	<view class="show-section">
		<view class="select">
			<picker wx:if="{{id}}=='length'" bindchange="bindPickerChange1" range="{{array}}" style="font-size:40rpx">
				<view class="picker">
					{{array[index1]}}
				</view>
			</picker>
		</view>
		<view class="show" bindtap="choose1" style="color:{{isChoose?'orange':'black'}}">
			{{res1}}
		</view>
	</view>
	<view class="showUnit">{{showUnit1}}</view>
	<view class="show-section">
		<view class="select">
			<picker wx:if="{{id}}=='length'" bindchange="bindPickerChange2" range="{{array}}" style="font-size:40rpx">
				<view class="picker">
					{{array[index2]}}
				</view>
			</picker>
		</view>
		<view class="show" bindtap="choose2" style="color:{{!isChoose?'orange':'black'}}">
			{{res2}}
		</view>
	</view>
	<view class="showUnit">{{showUnit2}}</view>
	<view class="input-section">
		<view class="inputBox">
			<view class="v2" id='{{id7}}' bindtap="inputBtn" hover-class="shadow">7</view>
			<view class="v2" id='{{id4}}' bindtap="inputBtn" hover-class="shadow">4</view>
			<view class="v2" id='{{id1}}' bindtap="inputBtn" hover-class="shadow">1</view>
			<view class="v2" bindtap="loveBtn" hover-class="shadow">♡</view>
		</view>
		<view class="inputBox">
			<view class="v2" id='{{id8}}' bindtap="inputBtn" hover-class="shadow">8</view>
			<view class="v2" id='{{id5}}' bindtap="inputBtn" hover-class="shadow">5</view>
			<view class="v2" id='{{id2}}' bindtap="inputBtn" hover-class="shadow">2</view>
			<view class="v2" id='{{id0}}' bindtap="inputBtn" hover-class="shadow">0</view>
		</view>
		<view class="inputBox">
			<view class="v2" id='{{id9}}' bindtap="inputBtn" hover-class="shadow">9</view>
			<view class="v2" id='{{id6}}' bindtap="inputBtn" hover-class="shadow">6</view>
			<view class="v2" id='{{id3}}' bindtap="inputBtn" hover-class="shadow">3</view>
			<view class="v2" id='{{id_dot}}' bindtap="inputBtn" hover-class="shadow">.</view>
		</view>
		<view class="inputBox">
			<view class="backBtn" id='{{id_d}}' bindtap="inputBtn" hover-class="shadow">←</view>
			<view class="clearBtn" id='{{id_clear}}' bindtap="clearBtn" hover-class="shadow">C</view>

		</view>

	</view>
</view>