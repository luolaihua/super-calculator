/* miniprogram/pages/myMatrices/myMatrices.wxss */
.body{
  width: 100%;
  height: 450rpx;
  display: flex;
  flex-direction: row;
}

.picker-section{
  display: flex;
  flex-direction: column;
}
.picker1{
  margin-left: 20rpx;
}
.picker2{
  margin-left: 20rpx;
}
.input-section{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.input-box{
  height: 100%;
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.input{
  height: 180rpx;
  background-color: aqua;
  text-align: center;
}


.show-section{
  background-color: darkorange;
  height: 480rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0;
}

.op-section{
  width: 100%;
  height: 400rpx;
  display: flex;
  flex-direction: row;
}
.op-box{
  height: 100%;
  width: 25%;
  display: flex;
  flex-direction: column;
}
.opView {
  width: auto;
  font-size: 40rpx;
  height: 25%;
  display: flex;
  align-items: center;
  justify-content: center;
}