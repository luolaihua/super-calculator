/* miniprogram/pages/myMatrices/myMatrices.wxss */
.page{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.body{
  width: 100%;
  height: 360rpx;
  display: flex;
  flex-direction: row;
}
.AB{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50rpx;
}

.picker-section{
  display: flex;
  flex-direction: column;
}
.input-section{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.input-box{
  height: 100%;
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.input{
  
  height: 50rpx;
  text-align: center;
  border-style: solid;
  border-color: lightskyblue;
  margin:10rpx;
}


.show-section{
  border-style: solid;
  border-color: lightskyblue;
  font-size: 40rpx;
  height: 300rpx;
  width: 620rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.show-body{
  height: 360rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;

}

.op-section{
  width: 100%;
  margin:20rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.op-box{
  height: 100%;
  width: 20%;
  display: flex;
  flex-direction: column;
}
.opView {
  width: auto;
  font-size: 30rpx;
  height: 55rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: white;
}
.shadow2 {

  font-weight: 800;
}