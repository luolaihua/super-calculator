<!--miniprogram/pages/imageEdit/imageEdit.wxml-->

<view wx:if="{{!isSuccess}}" class="addImage" hover-class="none" hover-stop-propagation="false" bindtap="onClick">
   <image src="{{addImage}}" mode="aspectFit"/> 
</view>

<view  wx:else class="" hover-class="none" hover-stop-propagation="false" bindtap = "save">
  <canvas canvas-id="aiCrop" style="width:300px;height:300px;background-color:'red'"></canvas>  
</view>

 <button bindtap = "save" type="primary">选择图片</button>
 <button bindtap = "onClick" type="primary">重新选择</button>
